<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mrehya.Hire.HireFragment">
    
    <RelativeLayout
        android:background="@color/red"
        android:layout_width="match_parent"
        android:layout_height="90dp">
        <com.mrehya.MyTextView
            android:id="@+id/mytextHirePerson"
            android:textColor="@color/textColorWhite"
            android:textSize="@dimen/textSize1"
            android:text="استخدام کارجو"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp">

        <Button
            android:id="@+id/btnJobCats"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="35dp"
            android:background="@drawable/today_time_btn"
            android:textColor="@android:color/white"
            android:text="دسته بندی شغلی"
            android:textSize="11dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            />

        <Button
            android:id="@+id/btnNavigation"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="35dp"
            android:background="@drawable/today_time_btn"
            android:textColor="@android:color/white"
            android:text="موقعیت"
            android:textSize="11dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            />

        <Button
            android:id="@+id/btnIntouch"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="35dp"
            android:background="@drawable/today_time_btn"
            android:textColor="@android:color/white"
            android:text="انواع قرارداد"
            android:textSize="11dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/txtEmptyHires"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:visibility="gone"
        android:text="لیست تبلیغ‌ها خالی است"
        android:layout_marginTop="90dp"
        android:textSize="20dp"/>

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="5dp"

        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:scrollbars="vertical" />


</LinearLayout>
