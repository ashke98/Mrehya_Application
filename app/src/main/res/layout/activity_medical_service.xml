<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mrehya.Articles.MedicalService">
    <RelativeLayout
        android:background="@color/red"
        android:layout_width="match_parent"
        android:layout_height="90dp">
        <com.mrehya.MyTextView
            android:id="@+id/mytextMainMenu"
            android:textColor="@color/textColorWhite"
            android:textSize="@dimen/textSize1"
            android:text="منوی اصلی"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/LinearLayoutmedicalservice1"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal">
        <ImageView
            android:padding="5dp"
            android:id="@+id/imageView1"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/profile_thumb" />
        <Button
            android:paddingRight="10dp"
            android:paddingEnd="10dp"
            android:id="@+id/btnReserve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:background="@null"
            android:text="نوبت دهی اینترنتی"
            android:textColor="@color/textColorBlack" />
    </LinearLayout>
    <com.mrehya.MyTextView
        android:id="@+id/mytextArticles"
        android:textColor="@color/textColorBlack"
        android:textSize="@dimen/textSize3"
        android:text="مقالات"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/textColorBlack"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <android.support.v7.widget.RecyclerView
        android:layout_margin="5dp"
        android:id="@+id/recycler_view_article"
        android:clipToPadding="false"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>
