<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login_or_signup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mrehya.UserAccount.LoginOrSignup">
    <LinearLayout
        android:id="@+id/LinearLayoutloginorsignup"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:background="@drawable/logo_persian"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_width="120dp"
            android:layout_height="120dp" />


        <LinearLayout
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <android.support.v7.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:textColor="@color/textColorSecondary"
                android:id="@+id/btnGoToSignup"
                android:background="@drawable/btn_secondary"
                android:text="ثبت نام"
                />
            <android.support.v7.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:id="@+id/btnGoToLogin"
                android:background="@drawable/btn_primary_day"
                android:text="ورود"
                />
        </LinearLayout>

    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ورود به عنوان میهمان"
        style="@style/FlatButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:id="@+id/enterAsGuest"/>
</RelativeLayout>
