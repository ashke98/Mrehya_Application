<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:padding="@dimen/shimmeractivity_padding_horizontal">

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="@dimen/shimmerplaceholder_image"
        android:layout_height="@dimen/shimmerplaceholder_image"
        android:layout_marginRight="@dimen/shimmerpadding_10"
        android:layout_marginLeft="10dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/thumbnail"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:maxLines="1"
        android:textColor="@color/shimmeritem_name"
        android:textSize="@dimen/shimmername" />

    <TextView
        android:id="@+id/isanswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_toLeftOf="@id/thumbnail"
        android:maxLines="1"
        android:textColor="@color/shimmerchef"
        android:textSize="@dimen/shimmerchef" />

    <TextView
        android:id="@+id/point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/isanswer"
        android:layout_toLeftOf="@id/thumbnail"
        android:maxLines="1"
        android:text="2 min ago"
        android:textColor="@color/shimmertimestamp"
        android:textSize="@dimen/shimmertimestamp" />

    <TextView
        android:id="@+id/resultshow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/thumbnail"
        android:layout_marginTop="@dimen/shimmeractivity_padding_horizontal"
        android:ellipsize="end"
        android:maxLines="3"
        android:textColor="@color/shimmerdescription"
        android:textSize="@dimen/shimmerdescription" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/resultshow"
        android:layout_marginTop="@dimen/shimmerpadding_10"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/shimmerprice"
        android:textStyle="bold" />

</RelativeLayout>