<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        app:cardElevation="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:background="@drawable/stroke_bg"
                android:paddingRight="20dp"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/txtTitleCart"
                    android:layout_gravity="center"
                    android:textSize="15dp"
                    android:text="عنوان"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:gravity="right"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtSalePriceCart"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/red"
                        android:layout_gravity="center"
                        android:textSize="14dp"
                        android:text="۱۵۰۰۰"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/txtPriceCart"
                        android:layout_gravity="center"
                        android:textSize="14dp"
                        android:text="۲۰۰۰۰"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="right"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                        <ImageButton
                            android:layout_gravity="left"
                            android:id="@+id/btnDeleteCart"
                            android:background="@null"
                            android:src="@drawable/ic_delete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:id="@+id/btnPlusOneCart"
                        android:background="@drawable/stroke_bg"
                        android:src="@drawable/ic_plus_borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <com.mrehya.MyTextView
                        android:id="@+id/txtCountCart"
                        android:textColor="@color/textColorBlack"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="0"
                        android:paddingRight="15dp"
                        android:paddingLeft="15dp"
                        android:textSize="@dimen/textSize2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                    <ImageButton
                        android:id="@+id/btnMinusOneCart"
                        android:background="@drawable/stroke_bg"
                        android:src="@drawable/ic_minus_borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <android.support.v7.widget.CardView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                app:cardElevation="8dp"
                android:layout_weight="0.3"
                android:layout_width="0dp"
                android:layout_height="150dp">

                <ImageView
                    android:scaleType="fitXY"
                    android:id="@+id/imgProductCart"
                    android:src="@drawable/p11"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>