<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="com.mrehya.UserAccount.ProfileFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/profileGrey"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|bottom"
                    android:orientation="horizontal">

                    <com.mrehya.MyTextView
                        android:id="@+id/profileType"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/textColorWhite"
                        android:textSize="@dimen/textSize2" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5" />

                    <com.mrehya.MyTextView
                        android:id="@+id/profileName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:text="محمدرضا رجبی"
                        android:textColor="@color/textColorWhite"
                        android:textSize="@dimen/textSize2" />

                </LinearLayout>

            </RelativeLayout>

            <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/profilePic"
            android:layout_height="@dimen/profilePic"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:padding="0dp"
            android:id="@+id/profileImage"
            android:src="@drawable/profile_thumb" />

            <!--<ImageView-->
                <!--android:layout_width="@dimen/profilePic"-->
                <!--android:layout_height="@dimen/profilePic"-->
                <!--android:layout_alignParentBottom="true"-->
                <!--android:layout_centerHorizontal="true"-->
                <!--android:layout_marginBottom="5dp"-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:padding="0dp"-->
                <!--android:id="@+id/profileImage"-->
                <!--android:src="@drawable/profile_thumb" />-->

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <com.mrehya.MyTextView
                android:textSize="12sp"
                android:id="@+id/mytextUserInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="اطلاعات کاربری" />

            <LinearLayout
                android:id="@+id/LinearLayoutprofile1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layoutDirection="rtl"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:src="@drawable/sabtenam" />

                <Button
                    android:id="@+id/btnSignInOrUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@null"
                    android:gravity="right|center"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:text="ورود / ثبت نام" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/textColorGrey" />


            <LinearLayout
                android:id="@+id/LinearLayoutprofile2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layoutDirection="rtl"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:src="@drawable/virayesh" />

                <Button
                    android:id="@+id/btnEditProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@null"
                    android:gravity="right|center"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:text="ویرایش پروفایل" />


            </LinearLayout>

            <com.mrehya.MyTextView
                android:textSize="12sp"
                android:id="@+id/mytextUserInfo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="اطلاعات خرید، استخدام و رزرو" />
            //SHOPPING
            <LinearLayout
                android:id="@+id/LinearLayoutprofile3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layoutDirection="rtl"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:src="@drawable/moshahedekharid" />

                <Button
                    android:id="@+id/showPurchases"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@null"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:text="مشاهده خریدها" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/LinearLayoutprofile10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layoutDirection="rtl"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:src="@drawable/moshahedekharid" />

                <Button
                    android:id="@+id/ExamsHistory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@null"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:text="آزمون های انجام شده" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/textColorGrey" />
            //HIRE REQUESTS
            <LinearLayout
                android:id="@+id/LinearLayoutprofile4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layoutDirection="rtl"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:src="@drawable/vaziatdarkhast" />

                <Button
                    android:id="@+id/hireRequestStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@null"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:text="وضعیت درخواست‌های استخدام" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/textColorGrey" />
            //RESERVE
            <LinearLayout
                android:id="@+id/LinearLayoutprofileReserve"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layoutDirection="rtl"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewReserve"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:src="@drawable/khadamatepezeshki" />

                <Button
                    android:id="@+id/ReserveRequestStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@null"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:text="وقت های رزرو شده" />
            </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="40dp">

            <LinearLayout
                android:id="@+id/LinearLayoutprofile5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@drawable/instagram_btn"
                android:layoutDirection="rtl"
                android:orientation="horizontal"
                android:layout_gravity="right">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:src="@drawable/insa" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/textColorWhite" />

                <Button
                    android:id="@+id/BtnInstagram"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginStart="7dp"
                    android:background="@null"
                    android:text="اینستاگرام"
                    android:textColor="@color/textColorWhite"
                    android:textStyle="italic" />
            </LinearLayout>

            <LinearLayout

                android:id="@+id/LinearLayoutprofile6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:background="@drawable/telegram_btn"
                android:layoutDirection="rtl"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:src="@drawable/tele" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/textColorWhite" />
                <Button
                    android:id="@+id/btnTelegram"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginStart="7dp"
                    android:background="@null"
                    android:text="تلگرام"
                    android:textColor="@color/textColorWhite"
                    android:textStyle="italic" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>


</ScrollView>