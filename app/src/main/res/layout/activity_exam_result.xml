<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context="com.mrehya.Exams.ExamResult">

    <LinearLayout
        android:id="@+id/ExamLayout"
        android:padding="20dp"
        android:gravity="right"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/LinearLayouttextViews"
            android:background="@drawable/stroke_bg"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="عنوان"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="30dp"
                android:layout_margin="10dp" />
            <TextView
                android:id="@+id/tv_point"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="منتظر جواب سرور باشید..."
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:gravity="center" />
            <TextView
                android:id="@+id/tv_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:gravity="center" />
            <TextView
                android:id="@+id/tv_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Waiting for server response..."
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:gravity="center" />

            <TextView
                android:id="@+id/tv_points"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:gravity="center" />

            <Button
                android:layout_alignParentLeft="true"
                android:id="@+id/btn_Back"
                android:padding="3dp"
                android:layout_margin="5dp"
                android:text="برگشت"
                android:textSize="@dimen/textSize1"
                android:drawableRight="@drawable/ic_back_white"
                android:textColor="@color/textColorWhite"
                android:background="@drawable/back_btn_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
