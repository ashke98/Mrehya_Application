<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayoutitemjobs1"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:id="@+id/LinearLayouttop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="right"
        android:layoutDirection="rtl">
        <TextView
            android:id="@+id/txtJobTitle"
            android:gravity="right|center"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingRight="10dp"
            android:textSize="@dimen/textSize1"
            android:text="مدیر"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="wrap_content" />
        <ImageButton
            android:background="@null"
            android:id="@+id/btnEditJob"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/ic_edit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <ImageButton
            android:background="@null"
            android:id="@+id/btnDeleteJob"
            android:src="@drawable/ic_delete"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/LinearLayoutbot"
        android:layout_marginRight="10dp"
        android:gravity="right"
        android:layout_gravity="right"
        android:layoutDirection="rtl"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <TextView
            android:id="@+id/txtJobCompany"
            android:layout_marginLeft="30dp"
            android:textSize="@dimen/textSize1"
            android:textColor="@color/textColorBlack"
            android:text="نما اندیشان"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txtaz"
            android:textSize="@dimen/textSize2"
            android:textColor="@color/textColorBlack"
            android:layout_marginLeft="15dp"
            android:text="از"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txtJobFrom"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/textSize2"
            android:textColor="@color/textColorBlack"
            android:text="۱۳۹۰"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txtta"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/textSize2"
            android:textColor="@color/textColorBlack"
            android:text="تا"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txtJobTo"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/textSize2"
            android:textColor="@color/textColorBlack"
            android:text="۱۳۹۰"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>